{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest ./src --all --verbose=false",
    "test:livereload": "firebase emulators:exec --only firestore \"jest ./src --watchAll --verbose=false\"",
    "postinstall": "ln -sf ../../../libs/data/src/lib/model model"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.0",
    "luxon": "^1.22.2"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.2.0",
    "@firebase/firestore-types": "^1.10.1",
    "@firebase/testing": "^0.19.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.12.0",
    "firebase-tools": "^8.0.2",
    "@types/jest": "^24.0.19",
    "typescript": "^3.8.3"
  },
  "private": true
}
